<?xml version="1.0"?>
<launch>
  <arg name="image_left" default="/zedm/zed_node/left/image_rect_color" />
  <arg name="image_right" default="/zedm/zed_node/right/image_rect_color" />

  <rosparam param="/vive/world_offset">[0, 0, 0]</rosparam>
  <rosparam param="/vive/world_yaw">0.0</rosparam>

  <node name="vive_node" pkg="vive_ros" type="vive_node" launch-prefix="$(env HOME)/.steam/steam/ubuntu12_32/steam-runtime/run.sh" output="screen" required="true">
    <remap from="~image_left" to="$(arg image_left)" />
    <remap from="~image_right" to="$(arg image_right)" />
  </node>

  <!--<node type="rviz" name="rviz" pkg="rviz" args="-d $(find vive_ros)/launch/rviz_config.rviz" />-->

  <node name="left_controller_ps"
    pkg="htc_vive_teleop_stuff"
    type="frame_as_posestamped.py"
    args="controller_LHR_FD7A5BC3 world 30"/>

  <node name="right_controller_ps"
    pkg="htc_vive_teleop_stuff"
    type="frame_as_posestamped.py"
    args="controller_LHR_FDED7BC2 world 30"/>

  <node name="hmd_ps"
    pkg="htc_vive_teleop_stuff"
    type="frame_as_posestamped.py"
    args="hmd world 30"/>

</launch>


